{
  "compilerOptions": {
    "outDir": "./lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "allowJs": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": false,
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "include": [
      "./src/**/*.ts",
      "./src/**/*.tsx"
  ],
  "exclude": [
    "./src/__tests__/*",
    "./node_modules"
  ],
}
